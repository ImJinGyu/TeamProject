	<insert id="registerPen">
		INSERT INTO PENSION(
							PEN_ID,
		       				USER_ID,
		       				PEN_NAME,
		       				PEN_ADDRESS,
		       				PEN_ZIPCODE,
		       				PEN_NUMBER
							)
		VALUES(
			   #{PEN_ID},
		       #{USER_ID},
		       #{PEN_NAME},
		       #{PEN_ADDRESS},
		       #{PEN_ZIPCODE},
		       #{PEN_NUMBER})
	</insert>
	
	<insert id="pensionAttach">
		INSERT INTO PENSION_ATTACH(PEN_ID,PEN_IMAGE)
